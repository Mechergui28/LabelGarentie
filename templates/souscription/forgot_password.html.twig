{% extends 'base.html.twig' %}

{% block title %}
    La Belle Garantie | Mot de passe oublié
{% endblock %}

{% block body %}
    {% include('./Modal/verif_pwd_oublie.html.twig') %}
	{% set vars = {'active': 'souscription'} %}
	{% include('Header.html.twig') with vars %}

<div class="content">

        <div class="header_souscription bg-center bg-cover bg-no-repeat relative">
			<div class="xl:container xl:px-48 lg:px-24 md:px-16 px-4">
				<div class="pt-24 pb-36" style="background-image: linear-gradient(180deg,rgba(0,0,0,0.12) 0%,rgba(255,255,255,0) 100%);">
					<h1 class="TekoMedium text-white uppercase text-7xl lg:text-9xl pb-5 px-4 md:pl-8">
						Mot de passe
					</h1>
					<h2 class="TekoLight text-white text-3xl md:text-4xl animation-title px-4 md:pl-8">Réinitialisation de votre mot de passe</h2>
				</div>
			</div>
		</div>

    <div class="xl:container xl:px-48 lg:px-24 md:px-16 px-4 py-10">
        {{ form_start(form, {'attr': {'id': 'form_forgot_password'}}) }}
        <div id="form_forgot_password" class="bg-white rounded-lg shadow-2xl py-8 px-16">
            <h3 class="text-center text-black text-3xl TekoMedium font-medium pb-7">
                Veuillez saisir votre nouveau mot de passe
            </h3>
            <div class="col-start-2 xl:col-start-4 col-span-10 xl:col-span-4 row-start-2 xl:row-start-1 relative mx-2">
                {{ form_widget(form.pwd.first, {'label':false, 'attr': {'class':'form w-full text-2xl py-3 pl-3 form-login text-sm h-fit','minlength':'1','maxlength':'','name':'nom','placeholder': 'Nouveau mot de passe'}}) }}
                <span class="span-invalid text-red-600 hidden text-base TekoRegular form_pwd_first">*Ce champ est obligatoire</span>
            </div>

            <div class="col-start-2 xl:col-start-8 col-span-10 xl:col-span-4 row-start-3 xl:row-start-1 relative mx-2">
                {{ form_widget(form.pwd.second, {'label':false, 'attr': {'class':'form w-full text-2xl py-3 pl-3 form-login text-sm h-fit','minlength':'1','maxlength':'','name':'prenom','placeholder': 'Confirmer votre mot de passe'}}) }}
                <span class="span-invalid text-red-600 hidden text-base TekoRegular form_pwd_second">*Ce champ est obligatoire</span>
            </div>
            <div class="TekoMedium text-red-600 text-center">
                {{ form_errors(form.pwd.first) }}
            </div>
            <div class="col-start-2 xl:col-start-5 col-span-10 xl:col-span-4 row-start-13 xl:row-start-9 mt-5">
                <div class="grow flex flex-col-reverse ">
                    <div class="group mx-auto my-auto flex flex-row " style="color: transparent;">
                        {{ form_widget(form.Valider, {'attr': {'class':'relative text-white text-2xl bg-red-600 w-40 py-2 px-4 text-center TekoRegular a_lbg','name':'Valider','id':'Valider'}})}}
                    </div>
                </div>
            </div>
        </div>

       {{ form_end(form) }}
</div>
    <script>
        if({{error}} === 1){
            $('verifPwdOublie').css("display", "block");
        }
    </script>
    {% include('footer.html.twig') %}
    {% include('Header2.html.twig') with vars %}

{% endblock %}